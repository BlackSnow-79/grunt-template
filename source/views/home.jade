extends layouts/layout

block vars
  -title = 'Homepage'
  -bodyClass = 'home'

block container
    main#main
        nav#navigation-menu
            ul
                li
                    a(href="#block9") Section 9
                    a(href="#block1") Section 1
                    a(href="#block2") Section 2
                    a(href="#block3") Section 3
                    a(href="#block4") Section 4
                    a(href="#block5") Section 5
                    a(href="#block6") Section 6
                    a(href="#block7") Section 7
                    a(href="#block8") Section 8
        .banner#block9
            .content
                .container
                    .row
                        .col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
                            h1 Bán hàng trên Facebook &amp; các mạng xã hội chưa bao giờ dễ dàng hơn thế
                            .total-link
                                +link("Dễ quản lý, dễ sử dụng", "check", "Dễ quản lý, dễ sử dụng" , "#").link
                                +link("Kết nối Facebook &amp; đa nền tảng", "check", "Kết nối Facebook &amp; đa nền tảng" , "#").link
                                +link("Kết nối giao nhận, thanh toán sẵn sàng", "check", "Kết nối giao nhận, thanh toán sẵn sàng" , "#").link
                            +link("Dừng thử miễn phí 100%").btn.btn-red
